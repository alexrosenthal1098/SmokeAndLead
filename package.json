{
  "name": "smoke-and-lead",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm-run-all --parallel dev:*",
